# MES Frontend Environment Variables
# Copy this file to .env and fill in your actual values

# Application
VITE_APP_NAME=MES-FE
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Manufacturing Execution System Frontend

# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api
VITE_API_TIMEOUT=10000
VITE_API_RETRY_ATTEMPTS=3

# Authentication
VITE_AUTH_TOKEN_KEY=mes_auth_token
VITE_AUTH_REFRESH_TOKEN_KEY=mes_refresh_token
VITE_AUTH_TOKEN_EXPIRY=3600

# Feature Flags
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_MAINTENANCE_MODE=false

# External Services
VITE_WEBSOCKET_URL=ws://localhost:3000/ws
VITE_FILE_UPLOAD_URL=http://localhost:3000/api/upload
VITE_REPORT_GENERATION_URL=http://localhost:3000/api/reports

# Database (for client-side caching)
VITE_DB_NAME=mes_cache
VITE_DB_VERSION=1
VITE_CACHE_EXPIRY=86400

# UI Configuration
VITE_THEME=light
VITE_LANGUAGE=ko
VITE_TIMEZONE=Asia/Seoul
VITE_DATE_FORMAT=YYYY-MM-DD
VITE_TIME_FORMAT=HH:mm:ss

# Production Settings
VITE_ENVIRONMENT=development
VITE_LOG_LEVEL=debug
VITE_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=

# MES Specific
VITE_MES_COMPANY_NAME=Your Company
VITE_MES_FACILITY_ID=FAC001
VITE_MES_SHIFT_DURATION=8
VITE_MES_BREAK_DURATION=1
VITE_MES_QUALITY_THRESHOLD=95
VITE_MES_INVENTORY_WARNING_THRESHOLD=10
VITE_MES_EQUIPMENT_CHECK_INTERVAL=300

# Development Only
VITE_MOCK_API=true
VITE_MOCK_DELAY=1000
VITE_HOT_RELOAD=true
